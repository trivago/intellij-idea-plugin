<idea-plugin url="https://github.com/trivago/intellij-idea-plugin">

    <!-- <id> must match id in updatePlugins.xml -->
    <id>com.trivago.intellij.plugin</id>

    <!-- the <name> element should match the same element in updatePlugins.xml. -->
    <name>trivago</name>

    <!-- the <description> element should match the same element in updatePlugins.xml. -->
    <description>
        <![CDATA[
                Internal plugin by trivago.<br /><br />

                Features:
                <ul>
                    <li>Autogenerated classes to protobuf navigation</li>
                </ul>
                <p>
                    Contributions are welcome on our <a href="https://github.com/trivago/intellij-idea-plugin">Github repository</a>
                </p>
            ]]>
    </description>
    <vendor>trivago</vendor>

    <!-- <version> must match version in updatePlugins.xml -->
    <version>0.1.0</version>

    <!--
        The <idea-version> element must match the same element in updatePlugins.xml. Required.
    -->
    <idea-version since-build="193.0" until-build="193.*" />

    <extensions defaultExtensionNs="com.intellij">

        <psi.referenceContributor implementation="com.trivago.jetbrains.plugin.PsiProtoClassCommentReferenceContributor"/>

    </extensions>

</idea-plugin>